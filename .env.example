# .env.example
# 复制此文件为 .env 并填入真实的 API Key

# OpenAI API Key - 必需
# 获取地址: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Cloudflare Workers 部署配置（可选）
# 如果要部署到 Cloudflare Workers，请配置以下信息
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# 开发环境配置
NODE_ENV=development
PORT=4111

# 其他可选配置
# 设置 OpenAI 模型（默认: gpt-4o-mini）
OPENAI_MODEL=gpt-4o-mini

# 设置请求超时时间（毫秒，默认: 30000）
REQUEST_TIMEOUT=30000

# 设置默认教学风格（默认: conversational）
DEFAULT_TEACHING_STYLE=conversational

# 设置默认学习级别（默认: intermediate）
DEFAULT_LEARNING_LEVEL=intermediate
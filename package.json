{
  "name": "daily-word-teacher",
  "version": "1.0.0",
  "description": "Daily Word Teacher Agent using Mastra + OpenAI",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "mastra dev",
    "build": "mastra build",
    "start": "mastra start",
    "deploy": "mastra deploy cloudflare",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "dev:all": "concurrently \"npm run dev\" \"npm run frontend:dev\"",
    "setup": "npm install && cd frontend && npm install && cd ..",
    "clean": "rm -rf node_modules frontend/node_modules dist frontend/dist"
  },
  "dependencies": {
    "@mastra/core": "^0.1.0",
    "@mastra/deployer-cloudflare": "^0.1.0",
    "openai": "^4.52.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "nodemon": "^3.0.0"
  },
  "keywords": [
    "ai",
    "education",
    "english",
    "vocabulary",
    "mastra",
    "openai",
    "cloudflare-workers"
  ],
  "author": "593496637",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}